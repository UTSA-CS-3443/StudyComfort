<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="12dp">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="100dp" android:layout_height="80dp"
        android:scaleType="centerCrop" android:src="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Room Title" android:textStyle="bold" android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Details"/>
    </LinearLayout>
</LinearLayout>